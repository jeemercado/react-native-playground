{
  "name": "@jeemercado/react-native-playground",
  "version": "0.0.1",
  "private": true,
  "main": "./index.js",
  "scripts": {
    "analyze": "npx react-native-bundle-visualizer --platform android --dev false --format html --reset-cache",
    "android": "cross-env react-native run-android",
    "android:connect": "adb reverse tcp:8081 tcp:8081",
    "android:clean": "cd android && ./gradlew clean",
    "android:signingReport": "cd android && ./gradlew signingReport",
    "ios:clean": "cd ios && xcodebuild clean",
    "ios": "cross-env react-native run-ios",
    "ios:logs": "npm run ios -- --verbose > ios-build.log 2>&1",
    "start": "react-native start --reset-cache",
    "test": "jest",
    "lint:css": "npx stylelint \"./src/**/*.tsx\"",
    "lint:ts": "npx eslint --ext .ts,.tsx .",
    "lint": "npm run lint:ts --fix && npm run prettier && npm run lint:css",
    "prettier": "prettier --write \"./src/**/*.{tsx,ts}\""
  },
  "dependencies": {
    "react": "17.0.2",
    "react-native": "0.68.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.67.3",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-jest": "^26.6.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.67.0",
    "react-native-bundle-visualizer": "^3.1.1",
    "react-test-renderer": "17.0.2",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
